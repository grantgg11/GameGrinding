         <effect>
            <DropShadow />
         </effect>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <!-- Separator line above results -->
      <Line endX="1002.0" layoutX="240.0" layoutY="214.0" startX="-32.0" stroke="#ded9d9" />

