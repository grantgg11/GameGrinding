         <font>
            <Font name="System Bold" size="15.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

      <!-- Sidebar Icons -->
      <ImageView fitHeight="46.0" fitWidth="30.0" layoutX="23.0" layoutY="165.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/collectionOff.png" />
