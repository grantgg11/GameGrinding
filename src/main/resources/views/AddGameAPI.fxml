            <DropShadow />
            <DropShadow />
         </effect>
      </Rectangle>

      <!-- App logo -->
      <ImageView fitHeight="252.0" fitWidth="289.0" layoutX="-55.0" layoutY="-54.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/Images/GameGrinding.png" />
